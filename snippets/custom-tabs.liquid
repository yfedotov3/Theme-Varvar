    </div>
  </div>
</div>

<script id="product-variants-metafields" type="application/json">
  [
    {% for v in product.variants %}
      {
        "id": {{ v.id }},
        "metal": {{ v.metafields.custom.metal | json }},
        "average_weight": {{ v.metafields.custom.average_weight | json }},
        "maximum_ring_width": {{ v.metafields.custom.maximum_ring_width | json }},
        "gemstone": {{ v.metafields.custom.gemstone | json }},
        "size": {{ v.metafields.custom.size | json }},
        "sku": {{ v.sku | json }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
</script>